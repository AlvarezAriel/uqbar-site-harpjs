header.major
    h2 Algunos proyectos innovadores
.row
    each project, title in public.projects._data
        if project.featured
            div(div class="6u 12u(narrower)")
                section
                    a(href="#{project.url}" class="image featured")
                        img(src="#{project.image}" alt="")
                    header
                        h3 #{title}
                    p #{project.description}

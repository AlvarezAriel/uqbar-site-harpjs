.navbar
  z-index 200

nav
  div
    background-color: #4682b4;

.navbar-default
  background-color: transparent
  border-color: transparent
  border-width: 0
  border-radius: 0
  box-shadow: none

.affix
  position: fixed
  top 0
  -webkit-transform: translate3d(0, 0, 0)
  transform: translate3d(0, 0, 0)
  ul
      border-top none !important

#nav
  margin: 0 auto
  text-align: center;
  width: 100%;

  ul
    size: 30px
    float: none

    display: inline-block
    margin: 0
    padding: 0

    border-top 1px solid #fff

    li
      list-style-type: none
      float: left;
      padding: 2px 5px;
      a
        color #FFFFFF
        font-weight 400
        font-size 17px
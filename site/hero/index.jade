doctype
html
    head
        link( href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,300' rel='stylesheet' type='text/css')
        link(   href="/assets/build/build.css" rel="stylesheet" )

        block styles
            link(   href="/assets/vendors/css/materialize.min.css" rel="stylesheet" media="screen, projection")
            link(   href="index.css" rel="stylesheet" media="screen, projection")

        block scripts
            script( src="/assets/build/build.js")
            script( src="index.js")
            script( src="/assets/vendors/js/materialize.min.js")
            script( src="/assets/vendors/js/jquery.scrollfire.min.js")

    body
        .hero-container
            #hero-logo

        nav.fixed-navbar.transparent-nav(role='navigation')
            .nav-wrapper.container
                a#logo-container.brand-logo(href='#')
                    img.navbar-logo(src="/assets/images/logo-celeste.png")

                ul.right.hide-on-med-and-down
                    each section in public.shared.menu._data.sections
                        li
                            a(href="#{ section.path }") #{section.label}

                ul#nav-mobile.side-nav
                    each section in public.shared.menu._data.sections
                        li
                            a(href="#{ section.path }") #{section.label}

                a.button-collapse(href='#', data-activates='nav-mobile')
                    i.mdi-navigation-menu


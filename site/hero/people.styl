body
  font-family "Roboto", sans-serif

plus-sign()
  content: "+"
  font-family Arial
  font-weight 700
  color white
  z-index 2000
  font-size 15em
  margin-top 25vh

column()
  display: inline-block
  width: 33.3%
  height 100vh

column-background(someImage)
  background url("/assets/images/"+someImage+".jpg") no-repeat center center
  min-height: 100%;
  background-size: cover
  background-attachment:scroll
  position: relative

.column-left
  float: left
  column()
  .column-image-container
    column-background("industry")
    box-shadow: inset 0 0 0 1000px rgba(255,255,64,0.6);

.column-right
  column()
  float: right
  .column-image-container
    column-background("research")
    box-shadow: inset 0 0 0 1000px rgba(255,137,198,0.5);


  ::before
    plus-sign()
    margin-left -62px
    float: left

.column-center
  column()
  width: 33.4%

  .column-image-container
    column-background("education")
    box-shadow: inset 0 0 0 1000px rgba(159,171,255,0.5);

  ::before
    plus-sign()
    margin-left -62px
    float: left

.center-block-container
  width 100%
  position absolute
  text-align center
  color white
  top 5vh
  .inner-block
    display inline-block
    width 33%
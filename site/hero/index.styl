body
  font-family "Roboto", sans-serif

.hero-container
  display: inline-block
  width: 100%
  height 100vh
  background url("/assets/images/people.jpg") no-repeat center center
  box-shadow: inset 0 0 0 1000px rgba(0,0,0,0.1);
  background-size: cover
  background-attachment fixed

.hero-logo
  margin-top: 30vh
  background: url("/assets/images/logo-celeste.png") no-repeat center center
  background-size: contain
  height: 200px

.navbar-logo
  height: 64px


.fixed-navbar
  position fixed
  top 0

nav
  color: #fff;
  background-color: #494949;
  width: 100%;
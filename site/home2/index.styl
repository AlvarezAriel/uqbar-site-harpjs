body
  font-family "Roboto", sans-serif

.hero-container
  display: inline-block
  width: 100%
  height 250px
  background url("/assets/images/people.jpg") no-repeat center center
  box-shadow: inset 0 0 0 1000px rgba(60,60,60,0.3);
  background-size: cover
  background-attachment fixed
  color white
  p
    text-align: center;
    font-size: large;
    font-stretch: wider;
    font-style: normal;
    font-weight: 300;

#hero-logo
  margin-top: 30px
  margin-bottom 10px
  background: url("/assets/images/logo-celeste.png") no-repeat center center
  background-size: contain
  height: 95px

.mumuki-logo
  background url("/assets/images/mumuki.png") no-repeat center center
  background-size contain

.thin-languages
  background url("/assets/images/thin_languages.png") no-repeat center center
  background-size 90%
  height 100%


.navbar-logo
  height: 64px


.fixed-navbar
  position fixed
  top 0

.event-banner
  padding 20px
  width 100%
  background-color #818BE9
  text-align center
  p
    font-size: x-large;
    color: white;
    text-decoration: underline;
    font-style: initial;
    vertical-align: middle;
    margin-bottom: 0;
    padding: 10px;

nav
  color: #fff;
  background-color: #494949;
  width: 100%;
  z-index: 2000;
  .mdi-navigation-menu
    color #81c0e8
  a:hover
    color white
    text-decoration underline


.static-nav
  background-color #00414f
  ul
    max-width: 700px;
    margin 0 auto

.transparent-nav
  background-color: rgba(0,0,0,0)
  box-shadow: none
  .navbar-logo
    visibility hidden
  .mdi-navigation-menu
    color white
  #nav-fixed
    visibility hidden

footer.page-footer
  background-color #81c0e8
  
#card-pillars-container
  padding-top 10px

.twitter-widget
  padding 10px
  iframe
    height 300px !important